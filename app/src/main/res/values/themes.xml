<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.GrabBites" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:fontFamily">@font/open_sans</item>-->
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd" type="dimen">8dp</item>
        <item name="boxCornerRadiusBottomStart" type="dimen">8dp</item>
        <item name="boxCornerRadiusTopEnd" type="dimen">8dp</item>
        <item name="boxCornerRadiusTopStart" type="dimen">8dp</item>
        <item name="boxStrokeColor" type="color">@color/primary_color</item>
        <item name="android:layout_width" type="dimen">0dp</item>
        <item name="android:layout_height" type="dimen">wrap_content</item>
        <item name="android:layout_marginVertical" type="dimen">8dp</item>
    </style>

    // rounded image
    <style name="RoundedSquare">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.GrabBites" parent="Base.Theme.GrabBites" />

</resources>